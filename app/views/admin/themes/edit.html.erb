<!-- app/views/admin/themes/edit.html.erb -->
<h1>Edit Theme: <%= @theme.name %></h1>

<%= form_with model: @theme, local: true, class: 'row g-3' do |form| %>
  <% if @theme.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h6>Please fix the following errors:</h6>
        <ul class="mb-0">
          <% @theme.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="col-md-6">
    <%= form.label :preview_image, 'Preview Image URL', class: 'form-label' %>
    <%= form.url_field :preview_image, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <div class="col-12">
    <div class="form-check">
      <%= form.check_box :active, class: 'form-check-input' %>
      <%= form.label :active, 'Active', class: 'form-check-label' %>
    </div>
  </div>

  <div class="col-12">
    <h5>CSS Variables</h5>
    <%= form.text_area :css_variables, rows: 8, class: 'form-control' %>
  </div>

  <div class="col-12">
    <h5>Template Files</h5>
    <%= form.text_area :template_files, rows: 12, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.submit 'Update Theme', class: 'btn btn-primary' %>
    <%= link_to 'View', theme_path(@theme), class: 'btn btn-info' %>
    <%= link_to 'Back', themes_path, class: 'btn btn-secondary' %>
  </div>
<% end %>