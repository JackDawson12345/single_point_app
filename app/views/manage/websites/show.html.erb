<!-- app/views/manage/websites/show.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><%= @website.site_name %></h1>
    <p class="text-muted mb-0">
      Theme: <%= @website.theme.name %> |
      Status:
      <span class="badge <%= @website.published? ? 'bg-success' : 'bg-warning' %>">
        <%= @website.published? ? 'Published' : 'Draft' %>
      </span>
    </p>
  </div>
  <div>
    <%= link_to 'Preview', preview_manage_website_path(@website),
                class: 'btn btn-info', target: '_blank' %>
    <%= link_to 'Customize', customize_manage_websites_path,
                class: 'btn btn-primary' %>
    <%= link_to @website.published? ? 'Unpublish' : 'Publish',
                publish_manage_website_path(@website),
                method: :patch,
                class: "btn #{ @website.published? ? 'btn-warning' : 'btn-success'}" %>
  </div>
</div>

<div class="row g-4">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Website Pages</h5>
      </div>
      <div class="card-body">
        <div class="list-group list-group-flush">
          <% @pages.each do |page| %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <h6 class="mb-1"><%= page.title %></h6>
                <small class="text-muted">/<%= page.page_type %></small>
              </div>
              <div>
                <%= link_to 'Edit Content', edit_manage_website_page_path(@website, page),
                            class: 'btn btn-sm btn-outline-primary' %>
                <%= link_to 'Preview', preview_manage_website_path(@website, page: page.page_type),
                            class: 'btn btn-sm btn-outline-info', target: '_blank' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to 'Edit Website Settings', edit_manage_website_path(@website),
                      class: 'btn btn-outline-secondary' %>
          <%= link_to 'Customize Theme', customize_manage_websites_path,
                      class: 'btn btn-outline-primary' %>
          <%= link_to 'View Live Site', @website.preview_url,
                      class: 'btn btn-success', target: '_blank' if @website.published? %>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0">Website Stats</h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-6">
            <h4><%= @pages.count %></h4>
            <small class="text-muted">Pages</small>
          </div>
          <div class="col-6">
            <h4><%= @website.theme.name %></h4>
            <small class="text-muted">Theme</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>